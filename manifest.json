{
  "manifest_version": 3,
  "name": "Prayer Reminder",
  "version": "3.0",
  "description": "Shows notifications and plays adhan for prayer times. Search for any mosque on Mawaqit or use your location to find nearby mosques.",

  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "offscreen"
  ],

  "host_permissions": [
    "https://mawaqit.net/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["icon.png"],
      "matches": ["<all_urls>"]
    }
  ]
}