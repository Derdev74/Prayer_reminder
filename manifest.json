{
  "manifest_version": 3,
  "name": "CCML Prayer Reminder",
  "version": "1.3",
  "description": "Shows notifications and plays adhan for CCML prayer times in Lausanne with daily live fetch.",
  "permissions": ["alarms", "notifications", "storage", "scripting", "tabs"],
  "host_permissions": ["https://www.ccmgl.ch/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["adhan.mp3", "icon.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://www.ccmgl.ch/fr/cultes/horaire-des-pri%C3%A8res*"],
      "js": ["content-script.js"]
    }
  ]
}
