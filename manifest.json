{
  "manifest_version": 3,
  "name": "CCML Prayer Reminder",
  "version": "2.1",
  "description": "Shows notifications and plays adhan for CCML prayer times in Lausanne. Fetches real times from Mawaqit daily.",
  
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "scripting",
    "tabs",
    "offscreen"
  ],

  "host_permissions": [
    "https://www.ccmgl.ch/*",
    "https://mawaqit.net/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["adhan.mp3", "icon.png"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_scripts": [
    {
      "matches": ["https://www.ccmgl.ch/fr/cultes/horaire-des-pri*"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}